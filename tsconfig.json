{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./api/src",
    "outDir": "./api/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": ["api/src/**/*"],
  "exclude": ["node_modules", "client"]
}
